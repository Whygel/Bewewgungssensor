<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bewewgungssensor.Spielfeld"
             Title="Spielfeld" Loaded="ContentPage_Loaded" Disappearing="ContentPage_Disappearing">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height ="*" x:Name="Spielfeldgröße"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

            <HorizontalStackLayout  Grid.Column="0" HorizontalOptions="Start">
                <Label Text="Highscore: " Margin="0,0,5,0"/>
                <Label x:Name="TbScore" Text="0000"/>
            </HorizontalStackLayout>

                <Label Grid.Column="1" x:Name="LbTimer" Text="Zeit" HorizontalOptions="Center" />
                <Button Text="Exit" Background="Red" TextColor="White" HorizontalOptions="End" Clicked="Button_Clicked" Grid.Column="2"/>
            </Grid>

            <Border Grid.Row="1" StrokeThickness="2" Stroke="Black" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                
                <AbsoluteLayout x:Name="SpielfeldLayout" Background="LightBlue" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
                    <Label Text="Punkt" x:Name="Spieler"   Background="Yellow"/>
                </AbsoluteLayout>
            </Border>

        </Grid>
</ContentPage>