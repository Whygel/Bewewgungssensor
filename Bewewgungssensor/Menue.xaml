<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bewewgungssensor.Menue"
             Title="Menue" Loaded="ContentPage_Loaded">
    
    <VerticalStackLayout>
        <Label 
      Text="Point Rush" FontSize="Caption"
      VerticalOptions="Center" 
      HorizontalOptions="Center"/>

        <StackLayout Orientation="Horizontal"    VerticalOptions="Center" 
HorizontalOptions="Center">
            <Label Text="Name" FontSize="Header" VerticalOptions="Center" />
            <Entry x:Name="TbPlayerName" VerticalOptions="Center" />
        </StackLayout>

        <Button Text="Spiel starten"       VerticalOptions="Center"  Clicked="Button_Clicked"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="HighscoreListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Spielername}" Detail="{Binding Score}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>